@model Bnpp.DataLayer.Entities.OperationalDatas.Operational
@{
    ViewData["Title"] = "CraeteChemicalWater";
    Layout = null;
}

<div id="normal">
    <form id="normalForm" asp-action="CraeteChemicalWater" method="post">
        <table cellpadding="3" cellspacing="0">
            <tbody>
                <tr>
                    <td>
                        Parameter Name:
                    </td>
                    <td>
                        <input asp-for="ParameterName" type="text" id="iName" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="ParameterName"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        AKZ:
                    </td>
                    <td>
                        <input asp-for="AKZ" type="text" id="iAZK" required="" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="AKZ"></span>
                    </td>
                </tr>

                <tr>
                    <td>
                        Minimum Value:
                    </td>
                    <td>
                        <input asp-for="MinimumValue" type="text" id="iAZK" required="" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="MinimumValue"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Maximum Value:
                    </td>
                    <td>
                        <input asp-for="MaximumValue" type="text" id="iPosition" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="MaximumValue"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Normal Value:
                    </td>
                    <td>
                        <input asp-for="NormalValue" type="text" id="iPosition" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="NormalValue"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        No. Allowable Transient Events:
                    </td>
                    <td>
                        <input asp-for="TransientEvents" type="text" id="iPosition" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="TransientEvents"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Unit:
                    </td>
                    <td>
                        <input asp-for="Unit" type="text" id="iPosition" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="Unit"></span>
                    </td>
                </tr>

                <tr>
                    <td>
                        <input type="button" onclick="submitNormal()" value="Save" class="butn-save" style="direction: ltr; text-align: left;">
                        <input type="button" onclick="showPage2()" value="Cancel" id="Button2" class="butn-cancel" style="direction: ltr; text-align: left;">
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
</div>

<link href="/css/kendo.common.min.css" rel="stylesheet" />
<link href="/css/kendo.default.min.css" rel="stylesheet" />

<script src="/js/jquery.min.js"></script>
<script src="/js/kendo.all.min.js"></script>
<script src="~/js/jquery.validate.min.js"></script>
<script src="~/js/jquery.validate.unobtrusive.min.js"></script>


<script type="text/javascript">
    function submitNormal() {
        var data = $("#normalForm").serialize();
        //console.log(data);
        //alert(data);
        $.ajax({
            type: 'POST',
            url: '/Operational/CraeteChemicalWater',
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8', // when we use .serialize() this generates the data in query string format. this needs the default contentType (default content type is: contentType: 'application/x-www-form-urlencoded; charset=UTF-8') so it is optional, you can remove it
            data: data,
            success: function () {
                $("#Tabs").load("/Operational/ChemicalWater/");
            },

            error: function () {
                //alert('Failed to receive the Data');
                //console.log('Failed ');
            }
        });

    }

</script>