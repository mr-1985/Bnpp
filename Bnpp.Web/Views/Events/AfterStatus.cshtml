@model Bnpp.DataLayer.ViewModels.AfterStatusViewModel
@{
    ViewData["Title"] = "AfterStatus";
    Layout = null;
}

<div id="normal">
    <form id="chemicalForm" asp-action="AfterStatus" method="post">
        <input type="hidden" asp-for="EventsId" />
        <table cellpadding="3" cellspacing="0">
            <tbody>
                <tr>
                    <td>
                        Heat Power:
                    </td>
                    <td>
                        <input asp-for="AfterHeatPower" type="text" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="AfterHeatPower"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Electrical Power:
                    </td>
                    <td>
                        <input asp-for="AfterElectricalPower" type="text" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="AfterElectricalPower"></span>
                    </td>
                </tr>

                <tr>
                    <td>
                        No. of Effective Working Days:
                    </td>
                    <td>
                        <input asp-for="AfterEffectiveWorkingDays" type="text" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="AfterEffectiveWorkingDays"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Level of Pressure Water:
                    </td>
                    <td>
                        <input asp-for="AfterPressureWater" type="text" id="iPosition" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="AfterPressureWater"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Pressure in First Circuit:
                    </td>
                    <td>
                        <input asp-for="AfterPressureinFirstCircuit" type="text" id="iPosition" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="AfterPressureinFirstCircuit"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Pressure in Second Circuit:
                    </td>
                    <td>
                        <input asp-for="AfterPressureinSecondCircuit" type="text" id="iPosition" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="AfterPressureinSecondCircuit"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Vaccum in Condensor:
                    </td>
                    <td>
                        <input asp-for="AfterVaccuminCondensor" type="text" id="iPosition" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="AfterVaccuminCondensor"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="button" onclick="submitChemical()" value="Save" class="butn-save" style="direction: ltr; text-align: left;">
                        <input type="button" onclick="location='/Events'" value="Cancel" id="Button2" class="butn-cancel" style="direction: ltr; text-align: left;">
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
</div>

<link href="/css/kendo.common.min.css" rel="stylesheet" />
<link href="/css/kendo.default.min.css" rel="stylesheet" />

<script src="/js/jquery.min.js"></script>
<script src="/js/kendo.all.min.js"></script>
<script src="~/js/jquery.validate.min.js"></script>
<script src="~/js/jquery.validate.unobtrusive.min.js"></script>


<script type="text/javascript">
    function submitChemical() {
        var data = $("#chemicalForm").serialize();
        //console.log(data);
        //alert(data);
        $.ajax({
            type: 'POST',
            url: '/Events/AfterStatus/@ViewData["eventId"]',
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8', // when we use .serialize() this generates the data in query string format. this needs the default contentType (default content type is: contentType: 'application/x-www-form-urlencoded; charset=UTF-8') so it is optional, you can remove it
            data: data,
            success: function () {
                window.location.href = "/Events/";
            },

            error: function () {
                //alert('Failed to receive the Data');
                //console.log('Failed ');
            }
        });

    }

</script>