@model Bnpp.DataLayer.Entities.Electrical.Generator
@{
    ViewData["Title"] = "EditGenerator";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="dcontent">
    <div style="margin-top: 10px; background-color: #6b8d9e; padding-top: 5px; padding-bottom: 5px; padding-right: 10px; border-radius: 5px; border: solid 1px #cccccc; background: repeating-linear-gradient(-45deg, #7fa1b3, #6b8d9e 1px, #6b8d9e 1px, #6b8d9e 20px);">
        &nbsp;
    </div>
    <div style="border-radius: 5px; margin-top: 5px; margin-bottom: 5px; padding: 15px; border: solid 1px #cccccc; background-color: #f0f0f0;">
        <table cellpadding="3" cellspacing="0">
            <tbody>
                <tr>
                    <td>
                        Equip. Type:
                    </td>
                    <td style="width: 300px;">
                        <b>
                            Electrical Equipments
                        </b>
                    </td>
                </tr>
                <tr>
                    <td>
                        &nbsp;
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <h1>Edit Generator</h1>

    <div id="iError"></div>
    <form asp-action="EditGenerator" method="post">
        <input type="hidden" asp-for="GeneratorId "/>
        <table cellpadding="3" cellspacing="0">
            <tbody>
            <tr>
                <td>
                    Generator Name:
                </td>
                <td>
                    <input asp-for="Name" type="text" id="iName" style="direction: ltr; text-align: left;">
                </td>
            </tr>
            <tr>
                <td>
                    AKZ:
                </td>
                <td>
                    <input asp-for="Azk" type="text" id="iAZK" style="direction: ltr; text-align: left;">
                </td>
            </tr>
            <tr>
                <td>
                    Installation Position:
                </td>
                <td>
                    <input asp-for="Position" type="text" id="iPosition" style="direction: ltr; text-align: left;">
                </td>
            </tr>
            <tr style="display: none;">
                <td>
                    Type:
                </td>
                <td>
                    <select name="iType" id="iType" type="text">
                        <option value="پمپ">پمپ</option>
                        <option value="الکتروموتور">الکتروموتور</option>
                        <option value="سیستم های جانبی">سیستم های جانبی</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>
                        <input onclick="if(confirm('Are You sure ?')){}else{return false;};" type="submit" value="Save" class="butn-save" style="direction: ltr; text-align: left;">
                    <input type="button" onclick="location = '/Generator'" value="Cancel" id="Button2" class="butn-cancel" style="direction: ltr; text-align: left;">
                </td>
            </tr>
            </tbody>
        </table>
    </form>
</div>

