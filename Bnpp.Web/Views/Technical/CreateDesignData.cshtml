@model Bnpp.DataLayer.Entities.BasicData.DesignData

@{
    ViewData["Title"] = "CreateDesignData";
    Layout = null;
}


<div id="normal">
    <form id="designForm" asp-action="CreateDesignData" method="post">
        <table cellpadding="3" cellspacing="0">
            <tbody>
                <tr>
                    <td>
                        Parameter Name:
                    </td>
                    <td>
                        <input asp-for="ParameterName"  type="text" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="ParameterName"></span>
                    </td>
                </tr>

                <tr>
                    <td>
                        unit:
                    </td>
                    <td>
                        <input asp-for="unit"  type="text" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="unit"></span>
                    </td>
                </tr>

                <tr>
                    <td>
                        value:
                    </td>
                    <td>
                        <input asp-for="Value" type="text"  style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="Value"></span>
                    </td>
                </tr>

                <tr>
                    <td>
                        Description:
                    </td>
                    <td>
                        <input asp-for="Description"  type="text" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="Description"></span>
                    </td>
                </tr>
               
                <tr>
                    <td>
                        <input type="button" onclick="submitdesignNormal()" value="Save" class="butn-save" style="direction: ltr; text-align: left;">
                        <input type="button" onclick="showPage2()" value="Cancel" id="Button2" class="butn-cancel" style="direction: ltr; text-align: left;">
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
</div>


<script src="/js/jquery.min.js"></script>

<script src="/js/jquery.validate.min.js"></script>
<script src="/js/jquery.validate.unobtrusive.min.js"></script>



<script type="text/javascript">
    function submitdesignNormal() {
        var data = $("#designForm").serialize();
        //console.log(data);
        //alert(data);
        $.ajax({
            type: 'POST',
            url: '/AgeingMechanism/CreateMechanism',
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8', // when we use .serialize() this generates the data in query string format. this needs the default contentType (default content type is: contentType: 'application/x-www-form-urlencoded; charset=UTF-8') so it is optional, you can remove it
            data: data,
            success: function() {
               $("#Tabs").load("/Technical/DesignData/");
            },

            error: function() {
                //alert('Failed to receive the Data');
                //console.log('Failed ');
            }
        });

    }

</script>