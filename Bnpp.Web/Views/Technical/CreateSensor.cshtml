@model Bnpp.DataLayer.Entities.BasicData.Sensors
@{
    ViewData["Title"] = "CreateSensor";
     Layout = null;
}

<div id="normal">
    <form id="chemicalForm" asp-action="CreateSensor" method="post">
        <table cellpadding="3" cellspacing="0">
            <tbody>
                <tr>
                    <td>
                        Parameter to measure:
                    </td>
                    <td>
                        <input asp-for="Parametertomeasure" type="text" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="Parametertomeasure"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        AKZ:
                    </td>
                    <td>
                        <input asp-for="AKZ" type="text" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="AKZ"></span>
                    </td>
                </tr>

                <tr>
                    <td>
                        No. of signals:
                    </td>
                    <td>
                        <input asp-for="Numberofsignals" type="text" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="Numberofsignals"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        KKS:
                    </td>
                    <td>
                        <input asp-for="KKS" type="text" id="iPosition" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="KKS"></span>
                    </td>
                </tr>

                <tr>
                    <td>
                        Quantity:
                    </td>
                    <td>
                        <input asp-for="Quantity" type="text" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="Quantity"></span>
                    </td>
                </tr>
               
                <tr>
                    <td>
                        <input type="button" onclick="submitChemical()" value="Save" class="butn-save" style="direction: ltr; text-align: left;">
                        <input type="button" onclick="showPage8()" value="Cancel" id="Button2" class="butn-cancel" style="direction: ltr; text-align: left;">
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
</div>

<link href="/css/kendo.common.min.css" rel="stylesheet" />
<link href="/css/kendo.default.min.css" rel="stylesheet" />

<script src="/js/jquery.min.js"></script>
<script src="/js/kendo.all.min.js"></script>
<script src="~/js/jquery.validate.min.js"></script>
<script src="~/js/jquery.validate.unobtrusive.min.js"></script>


<script type="text/javascript">
    function submitChemical() {
        var data = $("#chemicalForm").serialize();
        //console.log(data);
        //alert(data);
        $.ajax({
            type: 'POST',
            url: '/Technical/CreateSensor',
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8', // when we use .serialize() this generates the data in query string format. this needs the default contentType (default content type is: contentType: 'application/x-www-form-urlencoded; charset=UTF-8') so it is optional, you can remove it
            data: data,
            success: function() {
               $("#Tabs").load("/Technical/Sensors/");
            },

            error: function() {
                //alert('Failed to receive the Data');
                //console.log('Failed ');
            }
        });

    }

</script>