@model Bnpp.DataLayer.Entities.BasicData.HForms
@{
    ViewData["Title"] = "EditHForms";
     Layout = null;
}

<div id="normal">
    <form id="DesignDocumentForm" asp-action="EditHForms" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="HFormsId"/>
        <input type="hidden" asp-for="HFormsImage"/>

        <table cellpadding="3" cellspacing="0">
            <tbody>
            <tr>
                <td>
                    Code:
                </td>
                <td>
                    <input asp-for="Code" type="text" id="txtCode" style="direction: ltr; text-align: left;">
                </td>
                <td>
                    <span asp-validation-for="Code"></span>
                </td>
            </tr>
            <tr>
                <td>
                    File Name:
                </td>

                <td>
                    <input asp-for="Filename" type="text" id="fileName" value="" style="direction: ltr; text-align: left;">
                </td>
                <td>
                    <span asp-validation-for="Filename"></span>
                </td>
            </tr>
            <tr>
                <td>
                    Select File:
                </td>
                <td>
                    <input type="file" name="imgHformsUp" id="imgHformsUp" style="direction: ltr; text-align: left;">
                </td>
            </tr>
            <tr>
                <td>
                    Doc. Name:
                </td>
                <td>
                    <input asp-for="DocumentName" type="text" id="txtDoc" style="direction: ltr; text-align: left;">
                </td>
            </tr>

            <tr>
                <td>
                    <input type="button" onclick="AjaxdocumentFormSubmit()" value="Save" class="butn-save" style="direction: ltr; text-align: left;">
                    <input type="button" onclick="showPage10()" value="Cancel" id="Button2" class="butn-cancel" style="direction: ltr; text-align: left;">
                </td>
            </tr>
            </tbody>
        </table>
    </form>
</div>



<script src="/js/jquery.min.js"></script>
<script src="~/js/jquery.validate.min.js"></script>
<script src="~/js/jquery.validate.unobtrusive.min.js"></script>

<script type="text/javascript">
       function AjaxdocumentFormSubmit() {
            //Set the URL.
            var url = $("#DesignDocumentForm").attr("action");
            //Add the Field values to FormData object.
            var formData = new FormData();
            formData.append("code", $("#txtCode").val());
            formData.append("Filename", $("#fileName").val());
            formData.append("DocumentName", $("#txtDoc").val());
            formData.append("HFormsId", $("#HFormsId").val());
            formData.append("HFormsImage", $("#HFormsImage").val());

           
            formData.append("filehforms", $("#imgHformsUp")[0].files[0]);
            
            debugger;

        var result = confirm("Are You Sure ?");
        if (result) {
 
            $.ajax({
                type: 'POST',
                url: url,
                data: formData,
                processData: false,
                contentType: false
            }).done(function() {
              $("#Tabs").load("/Technical/HForms/");
            });
        }
        }



          function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#imgCourse').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#imgCourseUp").change(function () {
            readURL(this);
        });

            $('input[type=file]').change(function () {

        $('#fileName').attr('value', this.files[0].name);
    });
</script>

