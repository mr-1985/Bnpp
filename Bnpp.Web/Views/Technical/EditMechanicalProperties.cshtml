@model Bnpp.DataLayer.Entities.BasicData.MechanicalProperties
@{
    ViewData["Title"] = "EditMechanicalProperties";
    Layout = null;
}

<div id="normal">
    <form id="designForm" asp-action="EditMechanicalProperties" method="post">
        <input type="hidden" asp-for="ComponentId" />
        <input type="hidden" asp-for="MechanicalPropertiesId" />
        <table cellpadding="3" cellspacing="0">
            <tbody>
                <tr>
                    <td>
                        Temperature:
                    </td>
                    <td>
                        <input asp-for="Temperature" type="text" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="Temperature"></span>
                    </td>
                </tr>

                <tr>
                    <td>
                        Young Module:
                    </td>
                    <td>
                        <input asp-for="YoungModule" type="text" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="YoungModule"></span>
                    </td>
                </tr>

                <tr>
                    <td>
                        Yield Strength:
                    </td>
                    <td>
                        <input asp-for="YieldStrength" type="text" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="YieldStrength"></span>
                    </td>
                </tr>

                <tr>
                    <td>
                        Ultimate Strength:
                    </td>
                    <td>
                        <input asp-for="UltimateStrength" type="text" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="UltimateStrength"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Specific Elongation:
                    </td>
                    <td>
                        <input asp-for="SpecificElongation" type="text" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="SpecificElongation"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Reduction Area:
                    </td>
                    <td>
                        <input asp-for="ReductionArea" type="text" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="ReductionArea"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Impact Toughness j/cm2:
                    </td>
                    <td>
                        <input asp-for="ImpactToughness" type="text" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="ImpactToughness"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Hardness:
                    </td>
                    <td>
                        <input asp-for="Hardness" type="text" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="Hardness"></span>
                    </td>
                </tr>

                <tr>
                    <td>
                        <input type="button" onclick="submitdesignNormal()" value="Save" class="butn-save" style="direction: ltr; text-align: left;">
                        <input type="button" onclick="showMechanicalPage()" value="Cancel" id="Button2" class="butn-cancel" style="direction: ltr; text-align: left;">
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
</div>


<script src="/js/jquery.min.js"></script>

<script src="/js/jquery.validate.min.js"></script>
<script src="/js/jquery.validate.unobtrusive.min.js"></script>



<script type="text/javascript">
    function submitdesignNormal() {
        var data = $("#designForm").serialize();
        //console.log(data);
        //alert(data);
        $.ajax({
            type: 'POST',
            url: '/Technical/EditMechanicalProperties',
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8', // when we use .serialize() this generates the data in query string format. this needs the default contentType (default content type is: contentType: 'application/x-www-form-urlencoded; charset=UTF-8') so it is optional, you can remove it
            data: data,
            success: function () {
                $("#newPage").load("/Technical/MechanicalProperties/@Model.ComponentId");
            },

            error: function () {
                //alert('Failed to receive the Data');
                //console.log('Failed ');
            }
        });

    }

    function showMechanicalPage() {
        $("#newPage").load("/Technical/MechanicalProperties/@Model.ComponentId");
    }

</script>