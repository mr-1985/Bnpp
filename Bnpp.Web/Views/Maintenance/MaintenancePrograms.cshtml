<script>

    function Create() {
        $("#newPage").load("/Maintenance/CreateMaintenancePrograms/");
    }

    function Edit(id) {
        $("#newPage").load("/Maintenance/EditMaintenancePrograms/" + id);
    }

    
    function EditProgramDocument(id) {
        $("#newPage").load("/Maintenance/EditProgramDocuments/" + id);
    }

     function showPage1() {
        $("#Tabs").load("/Maintenance/MaintenancePrograms/");
    }

    function showPage2() {
        $("#Tabs").load("/Maintenance/Defections/");
    }

    function showPage3() {
        $("#Tabs").load("/Maintenance/SpareParts/");
    }
    
    function showPage4() {
        $("#Tabs").load("/Maintenance/MaintenanceForms/");
    }
    
    function showPage5() {
        $("#Tabs").load("/Maintenance/Measurements/");
    }
    
     function showPage6() {
        $("#Tabs").load("/Maintenance/DefectsReport");
    }

    
    $("#checkAll").click(function () {
        $(".checkBox").prop('checked',
            $(this).prop('checked'));
    });

    $("#delete").click(function () {
        var selectedIDs = new Array();

        $('input:checkbox.checkBox').each(function () {
            if ($(this).prop('checked')) {
                selectedIDs.push($(this).val());
            }
        });

        var result = confirm("are you sure you want to delete?");
        if (result) {
        $.ajax({
            type: "POST",
            url: "/Maintenance/DeleteMaintenancePrograms",
            data: { "programId": selectedIDs },

            success: function (response) {
                $("#Tabs").load("/Maintenance/MaintenancePrograms/");
            },
            failure: function (response) {
                alert(response.responseText);
            },
            error: function (response) {
                alert(response.responseText);
            }

        });
        }

    });

    
    

    $("#checkAllPrograms").click(function () {
        $(".checkBoxProgram").prop('checked',
            $(this).prop('checked'));
    });

    $("#deleteProgram").click(function () {
        var selectedIDs = new Array();

        $('input:checkbox.checkBoxProgram').each(function () {
            if ($(this).prop('checked')) {
                selectedIDs.push($(this).val());
            }
        });

        var result = confirm("are you sure you want to delete?");
        if (result) {
            $.ajax({
                type: "POST",
                url: "/Maintenance/DeleteProgramDocuments",
                data: { "documentId": selectedIDs },

                success: function (response) {
                    $("#Tabs").load("/Maintenance/MaintenancePrograms/");
                },
                failure: function (response) {
                    alert(response.responseText);
                },
                error: function (response) {
                    alert(response.responseText);
                }

            });
        }

    });

    function CreateProgramDocument() {
        $("#newPage").load("/Maintenance/CreateProgramDocuments/");
    }

</script>




