@model Bnpp.DataLayer.Entities.AgeingManagementDocuments.ManagementReviews
@{
    ViewData["Title"] = "EditManagementReviews";
     Layout = null;
}

<div id="normal">
    <form id="occurenceForm" asp-action="EditManagementReviews" method="post">
        <input type="hidden" asp-for="ReviewsId"/>
        <table cellpadding="3" cellspacing="0">
            <tbody>
            <tr>
                <td>
                    Type of Report:
                </td>
                <td>
                    <input asp-for="Type" type="text" id="iName" style="direction: ltr; text-align: left;">
                </td>
                <td>
                    <span asp-validation-for="Type"></span>
                </td>
            </tr>
            <tr>
                <td>
                    Dates:
                </td>
                <td>
                    <input name="StartDates" asp-for="Date" id="Dates" style="direction: ltr; text-align: left;">
                </td>
            </tr>
            <tr>
                <td>
                    Frequency:
                </td>
                <td>
                    <input asp-for="Frequency" type="text" id="iAZK" required="" style="direction: ltr; text-align: left;">
                </td>
                <td>
                    <span asp-validation-for="Frequency"></span>
                </td>
            </tr>


            <tr>
                <td>
                    Prepared by:
                </td>
                <td>
                    <input asp-for="Prepared" type="text" id="iPosition" style="direction: ltr; text-align: left;">
                </td>
                <td>
                    <span asp-validation-for="Prepared"></span>
                </td>
            </tr>

            <tr>
                <td>
                    Approved by:
                </td>
                <td>
                    <input asp-for="Approved" type="text" id="iPosition" style="direction: ltr; text-align: left;">
                </td>
                <td>
                    <span asp-validation-for="Approved"></span>
                </td>
            </tr>

            <tr>
                <td>
                    Authorized by:
                </td>
                <td>
                    <input asp-for="Authorized" type="text" id="iPosition" style="direction: ltr; text-align: left;">
                </td>
                <td>
                    <span asp-validation-for="Authorized"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <input type="button" onclick="submitNormal()" value="Save" class="butn-save" style="direction: ltr; text-align: left;">
                    <input type="button" onclick="showPage3()" value="Cancel" id="Button2" class="butn-cancel" style="direction: ltr; text-align: left;">
                </td>
            </tr>
            </tbody>
        </table>
    </form>
</div>

<link href="/css/kendo.common.min.css" rel="stylesheet" />
<link href="/css/kendo.default.min.css" rel="stylesheet" />

<script src="/js/jquery.min.js"></script>
<script src="/js/kendo.all.min.js"></script>
<script src="~/js/jquery.validate.min.js"></script>
<script src="~/js/jquery.validate.unobtrusive.min.js"></script>
<script>
    // create DatePicker from input HTML element
    $("#Dates").kendoDatePicker();
</script>

<script type="text/javascript">
    function submitNormal() {
        var data = $("#occurenceForm").serialize();
        //console.log(data);
        //alert(data);

        var result = confirm("Are You Sure ?");
        if (result) {
        $.ajax({
            type: 'POST',
            url: '/ManagementDocuments/EditManagementReviews',
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8', // when we use .serialize() this generates the data in query string format. this needs the default contentType (default content type is: contentType: 'application/x-www-form-urlencoded; charset=UTF-8') so it is optional, you can remove it
            data: data,
            success: function() {
               $("#Tabs").load("/ManagementDocuments/ManagementReviews/");
            },

            error: function() {
                //alert('Failed to receive the Data');
                //console.log('Failed ');
            }
        });
        }

    }

</script>