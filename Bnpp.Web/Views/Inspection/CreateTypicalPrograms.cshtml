@model Bnpp.DataLayer.Entities.InspectionData.TypicalPrograms
@{
    ViewData["Title"] = "CreateTypicalPrograms";
    Layout = null;
}

<div id="normal">
    <form id="normalForm" asp-action="CreateTypicalPrograms" method="post">
        <table cellpadding="3" cellspacing="0">
            <tbody>
                <tr>
                    <td>
                        No. of T.P:
                    </td>
                    <td>
                        <input asp-for="TP" type="text" id="iName" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="TP"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        equip. Code:
                    </td>
                    <td>
                        <input asp-for="EquipCode" type="text" id="iAZK" required="" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="EquipCode"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Equip. Name:
                    </td>
                    <td>
                        <input asp-for="EquipName" type="text" id="iPosition" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="EquipName"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Test Method:
                    </td>
                    <td>
                        <input asp-for="TestMethod" type="text" id="iPosition" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="TestMethod"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Test Standard:
                    </td>
                    <td>
                        <input asp-for="TestStandard" type="text" id="iPosition" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="TestStandard"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Control Percent:
                    </td>
                    <td>
                        <input asp-for="ControlPercent" type="text" id="iPosition" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="ControlPercent"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Period:
                    </td>
                    <td>
                        <input asp-for="Period" type="text" id="iPosition" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="Period"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Weld Type:
                    </td>
                    <td>
                        <input asp-for="WeldType" type="text" id="iPosition" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="WeldType"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Remarks:
                    </td>
                    <td>
                        <input asp-for="Remarks" type="text" id="iPosition" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="Remarks"></span>
                    </td>
                </tr>

                <tr>
                    <td>
                        <input type="button" onclick="submitNormal()" value="Save" class="butn-save" style="direction: ltr; text-align: left;">
                        <input type="button" onclick="showPage3()" value="Cancel" id="Button2" class="butn-cancel" style="direction: ltr; text-align: left;">
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
</div>

<link href="/css/kendo.common.min.css" rel="stylesheet" />
<link href="/css/kendo.default.min.css" rel="stylesheet" />

<script src="/js/jquery.min.js"></script>
<script src="/js/kendo.all.min.js"></script>
<script src="~/js/jquery.validate.min.js"></script>
<script src="~/js/jquery.validate.unobtrusive.min.js"></script>


<script type="text/javascript">
    function submitNormal() {
        var data = $("#normalForm").serialize();
        //console.log(data);
        //alert(data);
        $.ajax({
            type: 'POST',
            url: '/Inspection/CreateTypicalPrograms',
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8', // when we use .serialize() this generates the data in query string format. this needs the default contentType (default content type is: contentType: 'application/x-www-form-urlencoded; charset=UTF-8') so it is optional, you can remove it
            data: data,
            success: function () {
                $("#Tabs").load("/Inspection/InspectionPrograms/");
            },

            error: function () {
                //alert('Failed to receive the Data');
                //console.log('Failed ');
            }
        });

    }

</script>