@model Bnpp.DataLayer.Entities.InspectionData.TestResults
@{
    ViewData["Title"] = "EditMetalThickness";
    Layout = null;
}

<div id="normal">
    <form id="normalForm" asp-action="EditMetalThickness" method="post">
        <input type="hidden" asp-for="TestResultsId" />
        <table cellpadding="3" cellspacing="0">
            <tbody>
                <tr>
                    <td>
                        No:
                    </td>
                    <td>
                        <input asp-for="NO" type="text" id="iName" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="NO"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Date:
                    </td>
                    <td>
                        <input name="TestDate" id="TestDate" style="direction: ltr; text-align: left;">
                    </td>
                </tr>
                <tr>
                    <td>
                        Unit description:
                    </td>
                    <td>
                        <input asp-for="UnitDescription" type="text" id="iAZK" required="" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="UnitDescription"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Point No:
                    </td>
                    <td>
                        <input asp-for="PointNo" type="text" id="iPosition" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="PointNo"></span>
                    </td>
                </tr>

                <tr>
                    <td>
                        Minimum allowed thickness:
                    </td>
                    <td>
                        <input asp-for="MinimumAllowedThickness" type="text" id="iPosition" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="MinimumAllowedThickness"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Measured Thickness:
                    </td>
                    <td>
                        <input asp-for="MeasuredThickness" type="text" id="iPosition" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="MeasuredThickness"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Quality assessment:
                    </td>
                    <td>
                        <input asp-for="QualityAssessment" type="text" id="iPosition" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="QualityAssessment"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        No. of log book:
                    </td>
                    <td>
                        <input asp-for="NooflogBook" type="text" id="iPosition" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="NooflogBook"></span>
                    </td>
                </tr>

                <tr>
                    <td>
                        Notes:
                    </td>
                    <td>
                        <input asp-for="Notes" type="text" id="iPosition" style="direction: ltr; text-align: left;">
                    </td>
                    <td>
                        <span asp-validation-for="Notes"></span>
                    </td>
                </tr>

                <tr>
                    <td>
                        <input type="button" onclick="submitNormal()" value="Save" class="butn-save" style="direction: ltr; text-align: left;">
                        <input type="button" onclick=" showsubPage7()" value="Cancel" id="Button2" class="butn-cancel" style="direction: ltr; text-align: left;">
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
</div>

<link href="/css/kendo.common.min.css" rel="stylesheet" />
<link href="/css/kendo.default.min.css" rel="stylesheet" />

<script src="/js/jquery.min.js"></script>
<script src="/js/kendo.all.min.js"></script>
<script src="~/js/jquery.validate.min.js"></script>
<script src="~/js/jquery.validate.unobtrusive.min.js"></script>

<script>
    // create DatePicker from input HTML element
    $("#TestDate").kendoDatePicker();
</script>

<script type="text/javascript">
    function submitNormal() {
        var data = $("#normalForm").serialize();
        //console.log(data);
        //alert(data);

        var result = confirm("Are You Sure ?");
        if (result) {
        $.ajax({
            type: 'POST',
            url: '/Inspection/EditMetalThickness',
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8', // when we use .serialize() this generates the data in query string format. this needs the default contentType (default content type is: contentType: 'application/x-www-form-urlencoded; charset=UTF-8') so it is optional, you can remove it
            data: data,
            success: function () {

                    $("#submenu").load("/Inspection/MetalThickness/");
            },

            error: function () {
                //alert('Failed to receive the Data');
                //console.log('Failed ');
            }
        });
        }

    }

</script>