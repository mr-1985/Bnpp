@model Bnpp.DataLayer.Entities.Commissioning
@{
    ViewData["Title"] = "EditCommissioning";
    Layout = null;
}


<div id="normal">
    <form id="designForm" asp-action="EditCommissioning" method="post">
        <input type="hidden" asp-for="CommissioningId"/>
        <table cellpadding="3" cellspacing="0">
            <tbody>
            <tr>
                <td>
                    Parameter1:
                </td>
                <td>
                    <input asp-for="Parameter1" type="text" style="direction: ltr; text-align: left;">
                </td>
                <td>
                    <span asp-validation-for="Parameter1"></span>
                </td>
            </tr>

            <tr>
                <td>
                    Parameter2:
                </td>
                <td>
                    <input asp-for="Parameter2" type="text" style="direction: ltr; text-align: left;">
                </td>
                <td>
                    <span asp-validation-for="Parameter2"></span>
                </td>
            </tr>

            <tr>
                <td>
                    Parameter3:
                </td>
                <td>
                    <input asp-for="Parameter3" type="text" style="direction: ltr; text-align: left;">
                </td>
                <td>
                    <span asp-validation-for="Parameter3"></span>
                </td>
            </tr>

            <tr>
                <td>
                    Parameter4:
                </td>
                <td>
                    <input asp-for="Parameter4" type="text" style="direction: ltr; text-align: left;">
                </td>
                <td>
                    <span asp-validation-for="Parameter4"></span>
                </td>
            </tr>

            <tr>
                <td>
                    <input type="button" onclick="submitdesignNormal()" value="Save" class="butn-save" style="direction: ltr; text-align: left;">
                    <input type="button" onclick="location='/Installation'" value="Cancel" id="Button2" class="butn-cancel" style="direction: ltr; text-align: left;">
                </td>
            </tr>
            </tbody>
        </table>
    </form>
</div>


<script src="/js/jquery.min.js"></script>

<script src="/js/jquery.validate.min.js"></script>
<script src="/js/jquery.validate.unobtrusive.min.js"></script>



<script type="text/javascript">
    function submitdesignNormal() {
        var data = $("#designForm").serialize();
        //console.log(data);
        //alert(data);

        var result = confirm("Are You Sure ?");
        if (result) {
        $.ajax({
            type: 'POST',
            url: '/Installation/EditCommissioning',
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8', // when we use .serialize() this generates the data in query string format. this needs the default contentType (default content type is: contentType: 'application/x-www-form-urlencoded; charset=UTF-8') so it is optional, you can remove it
            data: data,
            success: function() {
               window.location.href = "/Installation/";
            },

            error: function() {
                //alert('Failed to receive the Data');
                //console.log('Failed ');
            }
        });
        }

    }

</script>